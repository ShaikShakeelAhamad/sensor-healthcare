<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        tools:context=".SecureChannel">

        <TextView
            android:id="@+id/securechannel_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Establishing Secure Channel Between Mobile and Server through Gateway"
            android:textColor="#042A49"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/howIsConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:id="@+id/client_pub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Client Public Key:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/client_pri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Client Private Key:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fromserver_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="From Server"
            android:textColor="#042A49"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/server_pub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Client Public Key:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serverensign_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Server Encrypted Signature:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/atclent_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="At Client"
            android:textColor="#042A49"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/client_aes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="ECDH Generated AES Key:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/server_verified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/toserver_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="To Server"
            android:textColor="#042A49"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/client_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Client Signature:"
            android:textColor="#2196F3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fromserver_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="From Server"
            android:textColor="#042A49"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/client_verified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/accessApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:onClick="accessApp"
            android:text="Access App"
            android:textColor="#FFFFFF"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tempspace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#3F51B5"
            android:textStyle="bold|italic" />

    </LinearLayout>
</ScrollView>